@model List<CarsSystem.WebClient.MVC.Areas.Administration.Models.Cars.ShowAllCarsViewModel>

@{
    ViewBag.Title = "All cars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 class="text-center">All cars page!</h1>
<br />
<div class="row col-md-offset-3">
    @using (Ajax.BeginForm("Search", new AjaxOptions
    {
        UpdateTargetId = "results",
        InsertionMode = InsertionMode.Replace
    }))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-2 text-center">
            @Html.Label("Enter VIN: ", null, new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            @Html.TextBox("vinNumber", null, new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            <input type="submit" class="btn btn-default" value="Search"/>
        </div>
    }
</div>
<div id="results">
    @if (Model.Count <= 0)
    {
        @Html.Partial("_NoResults")
    }
    else
    {
        @Html.Partial("_AllCars")
    }
</div>